# This is Git's per-user configuration file.

# TODO: add gpg config

[user]
# Please adapt and uncomment the following lines:
    name = $NAME_HERE
    email = $USER_HERE

[core]
    editor = nvim
    pager = delta
    excludesfile = ~/.gitignore_global

[interactive]
    diffFilter = delta --color-only

[include]
    path = ~/.config/delta/catppuccin.gitconfig

[delta]
    features = catppuccin-macchiato
    navigate = true
    hyperlinks = true
    wrap-max-lines = unlimited


[merge]
    ; conflictstyle = diff3
    conflictstyle = zdiff3


[diff]
    colorMoved = default
    algorithm = histogram

[push]
    default = simple
    autoSetupRemote = true

[alias]
    l = log --pretty=format:\"%C(yellow)%h | %ad%Cred%d | %Creset%s%Cblue\\ [%cn]\" --decorate --date=iso --graph
    lr = log --pretty=format:\"%C(yellow)%h | %ad%Cred%d | %Creset%s%Cblue\\ [%cn]\" --decorate --date=relative --reverse
    co = checkout
    ci = commit
    st = status
    br = branch
    d = diff
    m = merge
